import math
#Finance calculator programme
#Optional: Prompt the user to enter their name.
name = input("Please input your name and surname: ")
print(f"Welcome, {name}")
#Prompt choose what they want to do on the programme
print("investment- to calculate the amount of interest you will earn on your investment")
print("Bond- To calculate the amount you will have to pay on a home loan")
user_selection = str(input("Enter either 'investment' or 'bond' from the menu above to proceed: "))
#Create a variable to store the outputs the user will select
investment = "investment"
bond = "bond"
simple = "Simple"
compound = "Compound"
#if the user selects investment ask for: Amount of money they are investing, Interest rate, number of years and to choose either simple or compound interest
if user_selection == investment:
    P = float(input("How much would you like to invest?: "))
    r = float(input("What is the interest?: "))
    #Create a formula that will divide the interest by 100
    investment_interest = (r/100)
    t = int(input("What is the investment term in 'years'?: "))
    interest = str(input("Do you want 'Simple' or 'Compound' interest?: "))
    #Create a formula that will calculate the option the user will select
    simple_formula = int(P*(1+investment_interest*t)) #P = ampount invested, investment_interest = r, t = term
    compound_formula = int(P*math.pow((1+investment_interest), t))
    if interest == simple:
        print(f"{name} your total invested amount with interest is: R{simple_formula}")
    elif interest == compound:
        print(f"{name} your total invested amount with interest is: R{compound_formula}")
#if the user selects bond: calculate the amount they will pay for their bond
if user_selection == bond:
    P = float(input("What is the value of the house?: "))
    i = float(input("What is the annual interest rate?: "))
    #Create a formula for the interest rate
    bond_interest = ((i/100)/12)
    n = int(input("The number of months you plan to repay the bond: "))
#Create a formula that will calculate the bond amount
#Replace the i in the formula with "bond_interest"
    bond_formula = int((bond_interest*P)/(1-(1+bond_interest)**(-n))) # i = interest, P = value of the house, n = number of years
    print(f"{name} your total bond payment is: R{bond_formula}")
#Else if the user did not follow the steps print an error message
else:
    print("invalid input")
